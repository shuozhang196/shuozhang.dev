<!DOCTYPE html>
<html lang="{{ site.lang | default: 'en-US' }}">
  {% include head.liquid %}
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Left Sidebar Navigation -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="sidebar-sticky">
            <!-- Name Section -->
            <div class="sidebar-name">
              <h1 class="site-title">{{ site.first_name }} {{ site.last_name }}</h1>
              {% if site.chinese_name %}
              <h2 class="site-chinese-name">{{ site.chinese_name }}</h2>
              {% endif %}
              <p class="site-affiliation">{{ site.affiliation }}</p>
              <p class="site-position">{{ site.position }}</p>
            </div>

            <!-- Navigation Menu -->
            <nav class="nav flex-column">
              {% for page in site.pages %}
                {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
              {% endfor %}

              <!-- Home -->
              <a class="nav-link {% if page.permalink == '/' %}active{% endif %}" href="{{ '/' | relative_url }}">
                {{ about_title }}
              </a>

              <!-- Other pages -->
              {% assign sorted_pages = site.pages | sort: 'nav_order' %}
              {% for p in sorted_pages %}
                {% if p.nav and p.autogen == null and p.title != 'books' and p.title != 'publications' and p.title != 'teaching' %}
                  <a class="nav-link {% if page.title == p.title %}active{% endif %}"
                     href="{% if p.permalink contains '://' %}{{ p.permalink }}{% else %}{{ p.permalink | relative_url }}{% endif %}">
                    {{ p.title }}
                  </a>
                {% endif %}
              {% endfor %}

              <!-- Divider -->
              <hr class="sidebar-divider">

              <!-- External Links -->
              {% if site.github_username %}
              <a class="nav-link external-link" href="https://github.com/{{ site.github_username }}" target="_blank">
                GitHub
              </a>
              {% endif %}

              {% if site.google_scholar %}
              <a class="nav-link external-link" href="{{ site.google_scholar }}" target="_blank">
                Google Scholar
              </a>
              {% endif %}

              {% if site.email %}
              <a class="nav-link external-link" href="mailto:{{ site.email }}">
                Email
              </a>
              {% endif %}
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
          <div class="content">
            {{ content }}
          </div>
        </main>
      </div>
    </div>

    {% include scripts.liquid %}

    <!-- Custom styles for sidebar layout -->
    <style>
      .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        overflow-y: auto;
      }

      .sidebar-sticky {
        position: relative;
        top: 0;
        height: calc(100vh - 48px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
      }

      .sidebar-name {
        margin-bottom: 2rem;
        padding: 0 1rem;
      }

      .site-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 0.25rem;
      }

      .site-chinese-name {
        font-size: 1.2rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 0.5rem;
      }

      .site-affiliation,
      .site-position {
        font-size: 0.9rem;
        color: #666;
        margin: 0.25rem 0;
      }

      .sidebar .nav-link {
        font-weight: 500;
        color: #666;
        padding: 0.5rem 1rem;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all 0.2s ease;
      }

      .sidebar .nav-link:hover {
        color: #333;
        border-bottom-color: #999;
      }

      .sidebar .nav-link.active {
        color: #000;
        border-bottom-color: #000;
      }

      .sidebar .external-link {
        color: #666;
        font-size: 0.9rem;
      }

      .sidebar-divider {
        margin: 1rem 0;
        border-color: #ddd;
      }

      .content {
        margin-top: 2rem;
      }

      /* Mobile responsiveness */
      @media (max-width: 767.98px) {
        .sidebar {
          position: static;
          height: auto;
          padding-top: 0;
        }

        .sidebar-sticky {
          height: auto;
        }

        .content {
          margin-top: 1rem;
        }
      }
    </style>
  </body>
</html>