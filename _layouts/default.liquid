<!DOCTYPE html>
<html lang="{{ site.lang | default: 'en-US' }}">
  {% include head.liquid %}
  <body>
    {% include header.liquid %}

    <div class="container-fluid">
      <div class="row">
        <!-- Left Sidebar Navigation -->
        <div class="col-md-4 col-lg-3 d-md-block sidebar">
          <div class="sidebar-sticky">
            <!-- Name Section -->
            <div class="sidebar-name">
              <h1 class="site-title">
                <strong>{{ site.first_name }} {{ site.last_name }}</strong><br>
                {% if site.chinese_name %}
                &nbsp;&nbsp;{{ site.chinese_name }}
                {% endif %}
              </h1>
              <div class="site-info">
                <span class="site-position">{{ site.position }}</span><br>
                <span class="site-affiliation">{{ site.affiliation }}</span><br>
                <span class="site-college">College of Business</span>
              </div>
            </div>

            <!-- Navigation Menu -->
            <nav class="nav flex-column">
              <!-- Home -->
              <a class="nav-link {% if page.permalink == '/' %}active{% endif %}" href="{{ '/' | relative_url }}">
                Home
              </a>

              <!-- Research -->
              <a class="nav-link {% if page.title == 'Research' %}active{% endif %}" href="{{ '/research/' | relative_url }}">
                Research
              </a>

              <!-- Curriculum Vitae -->
              <a class="nav-link {% if page.title == 'Curriculum Vitae' %}active{% endif %}" href="{{ '/cv/' | relative_url }}">
                Curriculum Vitae<br>中文简历
              </a>

              <div class="nav-spacer"></div>

              <!-- External Links -->
              {% if site.github_username %}
              <a class="nav-link external-link" href="https://github.com/{{ site.github_username }}" target="_blank">
                Github
              </a>
              {% endif %}

              {% if site.google_scholar %}
              <a class="nav-link external-link" href="{{ site.google_scholar }}" target="_blank">
                Google Scholar
              </a>
              {% endif %}

              <!-- School Website (placeholder) -->
              <a class="nav-link external-link" href="#" target="_blank">
                School Website
              </a>

              <!-- SSRN (placeholder) -->
              <a class="nav-link external-link" href="#" target="_blank">
                SSRN
              </a>
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <main role="main" class="col-md-8 col-lg-9 px-md-4">
          <div class="content">
            {{ content }}
          </div>
        </main>
      </div>
    </div>

    {% include footer.liquid %}
    {% include scripts.liquid %}

    <!-- Custom styles for sidebar layout -->
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        overflow-y: auto;
        background-color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      .sidebar-sticky {
        position: relative;
        top: 0;
        height: calc(100vh - 48px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
      }

      .sidebar-name {
        margin-bottom: 2rem;
        padding: 0 1rem;
        text-align: right;
      }

      .site-title {
        font-size: 1.5rem;
        font-weight: normal;
        color: #000;
        margin-bottom: 0.25rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.2;
      }

      .site-title strong {
        font-weight: normal;
      }

      .site-info {
        color: #ababab;
        font-size: 0.9rem;
        line-height: 1.4;
      }

      .site-position,
      .site-affiliation,
      .site-college {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-weight: normal;
      }

      .sidebar .nav-link {
        font-weight: normal;
        color: #666;
        padding: 0.25rem 1rem;
        text-decoration: underline;
        border-bottom: 1px solid transparent;
        transition: all 0.2s ease;
        display: block;
        text-align: right;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
      }

      .sidebar .nav-link:hover {
        color: #333;
        border-bottom-color: #999;
        text-decoration: underline;
      }

      .sidebar .nav-link.active {
        color: #000;
        border-bottom-color: #000;
        font-weight: normal;
        text-decoration: underline;
      }

      .sidebar .external-link {
        color: #666;
        font-size: 0.9rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      .sidebar-divider {
        margin: 1rem 0;
        border-color: #ddd;
      }

      .nav-spacer {
        display: block;
        height: 1rem;
      }

      .content {
        margin-top: 2rem;
        padding: 1rem 2rem;
        background-color: #ffffff;
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
      }

      /* Hide the original navbar since we have sidebar */
      .navbar {
        display: none;
      }

      /* Mobile responsiveness */
      @media (max-width: 767.98px) {
        .sidebar {
          position: relative;
          height: auto;
          padding-top: 1rem;
          margin-bottom: 2rem;
        }

        .sidebar-sticky {
          height: auto;
        }

        .content {
          margin-top: 1rem;
          padding: 0;
        }
      }
    </style>
  </body>
</html>