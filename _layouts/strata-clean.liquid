<html>
<head>
    {% include head-simple.liquid %}
</head>

<body id="top">

    <!-- Header -->
    <header id="header" style="background-position: left top, center center;">
        <div class="inner">
            <!-- <a href="#" class="image avatar"><img src="images/avatar.jpg" alt="" /></a> -->
            <h1><strong>{{ site.first_name }} {{ site.last_name }}<br>&nbsp;&nbsp;{{ site.chinese_name }}</strong></h1><br>
            <strong>
                <font color=#ababab>{{ site.position }}<br />
                    {{ site.affiliation }}<br />
                    {{ site.college }}
                </font>
            </strong><br>
            <br>
            <a href="{{ '/' | relative_url }}"> Home</a><br>
            <a href="{{ '/research/' | relative_url }}"> Research</a><br>
            <a href="{{ '/work/' | relative_url }}"> Work</a><br>
            <a href="{{ '/cv/' | relative_url }}">Curriculum Vitae<br>中文简历</a><br>
            <br>
            <a href="https://github.com/{{ site.github_username }}">Github</a><br>
            <a href="{{ site.lab_website }}">{{ site.lab_name }}</a><br>
            <a href="{{ site.conference_website }}">{{ site.conference_name }}</a><br>
            <a href="{{ '/software/' | relative_url }}"> R packages</a><br>
            <a href="{{ site.google_scholar }}">Google Scholar</a><br>
            <a href="{{ site.school_website }}">School Website</a><br>
            <a href="{{ site.ssrn }}">SSRN</a><br>
                    </div>
    </header>

    <!-- Main -->
    <div id="main">
        {{ content }}
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <ul class="icons">
                {% if site.twitter_username %}
                <li><a href="https://twitter.com/{{ site.twitter_username }}" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                {% endif %}
                {% if site.github_username %}
                <li><a href="https://github.com/{{ site.github_username }}" class="icon brands fa-github"><span class="label">Github</span></a></li>
                {% endif %}
                {% if site.linkedin_username %}
                <li><a href="https://linkedin.com/in/{{ site.linkedin_username }}" class="icon brands fa-linkedin"><span class="label">LinkedIn</span></a></li>
                {% endif %}
                {% if site.email %}
                <li><a href="mailto:{{ site.email }}" class="icon solid fa-envelope"><span class="label">Email</span></a></li>
                {% endif %}
            </ul>
            <ul class="copyright">
                <li>&copy; {{ site.copyright_year | default: "2024" }} {{ site.first_name }} {{ site.last_name }}</li>
                <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="{{ '/assets/js/jquery.min.js' | relative_url }}"></script>
    <script src="{{ '/assets/js/jquery.poptrox.min.js' | relative_url }}"></script>
    <script src="{{ '/assets/js/skel.min.js' | relative_url }}"></script>
    <script src="{{ '/assets/js/util.js' | relative_url }}"></script>
    <script src="{{ '/assets/js/main.js' | relative_url }}"></script>

    <!-- Google Analytics -->
    {% if site.google_analytics %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', '{{ site.google_analytics }}', 'auto');
        ga('send', 'pageview');
    </script>
    {% endif %}

</body>

</html>